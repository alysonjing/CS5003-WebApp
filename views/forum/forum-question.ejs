<html>

<head>
    <title>Community App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <!-- <link rel="stylesheet" href="../../public/css/forum/style.css" /> -->
    <link rel="stylesheet" href="../../css/forum/style.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="js/forum/login.js"></script>
</head>
<!-- REFERENCE - https://www.codeply.com/go/nhbdi2FkJm/bootstrap-4-login-form -->
<body class="bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center text-white mb-4">Question</h2>
                <div class=" question-container">
                    <div class="row question-container-heading">
                        <div class="col-sm-12">
                            <p>
                                <%= data.data.question %>
                            </p>
                        </div>
                    </div>
                    <div class="row question-container-description">
                        <div class="col-sm-12">
                            <p>
                                <%= data.data.description%>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-8"></div>
            <div class="col-sm-2">
                <a href='/forum/forum-answer/<%= data._id%>' class="btn btn-secondary bt-lg" style="width: 160px; margin-left: -50px;">Give Answer</a>
            </div>
            <div class="col-sm-2">
                <a href='/forum/forum-home' class="btn btn-secondary bt-lg" style="width: 160px; margin-left: -30px;">Home</a>
            </div>
        </div>
        <%  
        if(data.data.answers){
            data.data.answers.forEach(function(doc) { %>
            <div class="row">
                <div class="col-md-12">
                    <div class="answer-container">
                        <div class="row answer-container-heading">
                            <div class="col-sm-10">
                                <%= doc.username%>
                            </div>
                            <div class="col-sm-2">
                                <%= data.moment(doc.time).format('Do MMMM, YYYY');%>
                            </div>
                        </div>
                        <div class="row answer-container-description">
                            <div class="col-sm-12">
                                <%= doc.answer%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); 
        }%>

    </div>
    <!--/container-->
</body>

</html>