<html>

<head>
    <title>Community App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="js/forum/login.js"></script>
</head>

<body class="bg-dark">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-12">
                <h2 class="text-center text-white mb-4">Community Forum Login</h2>
                <div class="row">
                    <div class="col-md-6 mx-auto">
                        <!-- form card login REFERENCE - https://www.codeply.com/go/nhbdi2FkJm/bootstrap-4-login-form -->
                        <div class="card rounded-0">
                            <div class="card-header">
                                <h3 class="mb-0">Login</h3>
                            </div>
                            <a href="/" class="btn btn-success bt-lg" style="font-size:1.25rem; height:40px;width:100px; margin-left:18px;">Home</a>

                            <div class="card-body">
                                <form action="/forum/login" class="form" role="form" autocomplete="off" id="formLogin" onsubmit="return validate_login()" method="POST">
                                    <div class="form-group">
                                        <label for="uname1">Username</label>
                                        <input type="text" class="form-control form-control-lg rounded-0" name="username" id="uname1" required="">
                                        <span style="color:#F00" id="suname1"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <input type="password" name="password" class="form-control form-control-lg rounded-0" id="pwd1" required="" autocomplete="new-password">
                                        <span style="color:#F00" id="spwd1"></span>
                                    </div>
                                    <button type="submit" class="btn btn-success btn-lg float-left" id="btnLogin">Login</button>
                                    <a href="/forum/registerlink" class="btn btn-success btn-lg float-right" >Register</a>
                                </form>
                            </div>
                            <!--/card-block-->
                        </div>
                        <!-- /form card login -->
                    </div>
                </div>
                <!--/row-->
            </div>
            <!--/col-->
        </div>
        <!--/row-->
    </div>
    <!--/container-->
</body>
</html>
